generator client {
  provider = "prisma-client-js"
  // output   = "../node_modules/@prisma/client"  // Specify the path here
  output = "./app/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Color {
  id        Int     @id @default(autoincrement())
  colorHex  String
  colorName String
  productId Int
  product   Product @relation(fields: [productId], references: [id])
}

model Product {
  id             Int                   @id @default(autoincrement())
  status         String
  size           String[] @default(["XXS","XS","S","M","L","XL","XXL"])
  title          String
  price          Int
  description    String
  productDetails String
  productCare    String
  images         String[]
  colors         Color[]
  cartDetails    ProductCartDetailes[]
  hearts         Heart[]               @relation("HeartProducts")
  inventory Int @default(1000)
  gender Gender? @default(MEN)
}
enum Gender {
  WOMEN
  MEN
}

model ProductCartDetailes {
  id                Int      @id @default(autoincrement())
  selectedColorName String?
  selectedColor String?
  size              String?
  quantity          Int?
  accountId         Int
  productId         Int?
  account           Account  @relation(fields: [accountId], references: [id])
  product           Product?  @relation(fields: [productId], references: [id])
}

model Account {
  id         Int                   @id @default(autoincrement())
  username   String                @unique
  email      String                @unique
  password   String
  permission Role?                 @default(USER)
  hearts     Heart[]
  cart       ProductCartDetailes[]
}

model Heart {
  id        Int       @id @default(autoincrement())
  accountId Int?
  account   Account?  @relation(fields: [accountId], references: [id])
  products  Product[] @relation("HeartProducts")

  @@index([accountId])
}

model ContactSignup {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  email     String 
  message   String
}

enum Role {
  USER
  ADMIN
}

model NewsLetter {
  id Int @id @default(autoincrement())
  email String @unique
}

model Faq {
  Id Int @id @default(autoincrement())
  question String
  answer String
}